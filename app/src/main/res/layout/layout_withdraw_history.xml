<?xml version="1.0" encoding="UTF-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/bg_card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_earnings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_withdrawal"
            android:padding="15dp"
            android:background="@drawable/bg_gradient_withdraw"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:maxLines="2"
            android:textColor="@color/text_et_login"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/outfit_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_earnings"
            app:layout_constraintEnd_toStartOf="@+id/ll1"
            app:layout_constraintBottom_toTopOf="@+id/tv_date"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:textColor="@color/points"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_date"
            android:fontFamily="@font/outfit_medium"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toEndOf="@+id/iv_earnings"
            app:layout_constraintEnd_toStartOf="@+id/ll1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            tools:text="@string/app_name" />

        <LinearLayout
            android:id="@+id/ll1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:gravity="end"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_withdraw_status"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_et_login"
                android:textSize="15sp"
                android:fontFamily="@font/outfit_bold"
                tools:text="-50"  />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_et_login"
                android:textSize="12sp"
                android:fontFamily="@font/outfit_medium"
                tools:text="-50"
                android:layout_marginStart="2dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_withdraw_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_et_login"
            android:textSize="12sp"
            android:fontFamily="@font/outfit_regular"
            tools:text="@string/pending"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@+id/ll1"
            app:layout_constraintTop_toBottomOf="@+id/ll1"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>