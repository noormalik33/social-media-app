<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_stories"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_stories"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="5dp"
        android:src="@color/primary"
        app:riv_corner_radius="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_story_username"/>

    <View
        android:id="@+id/story_progress_bar"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:background="@drawable/bg_stories_circular"
        app:layout_constraintBottom_toTopOf="@+id/tv_story_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_prof_edit_upload"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/profile"
        android:elevation="15dp"
        android:padding="2dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-2dp"
        android:src="@drawable/ic_add_stories"
        app:layout_constraintBottom_toBottomOf="@+id/iv_stories"
        app:layout_constraintEnd_toEndOf="@+id/iv_stories"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/iv_stories"
        app:layout_constraintTop_toTopOf="@+id/iv_stories"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_story_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your story"
        android:gravity="center"
        android:textSize="12sp"
        android:paddingTop="3dp"
        android:maxLines="1"
        android:fontFamily="@font/outfit_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/story_progress_bar"/>

</androidx.constraintlayout.widget.ConstraintLayout>