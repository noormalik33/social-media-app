<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/story_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image"/>

    <LinearLayout
        android:id="@+id/ll_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        android:id="@+id/pb_story"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminate="true"
        app:cpb_color="#FFee44"
        app:cpb_colors="@array/pocket_bar_colors"
        app:cpb_max_sweep_angle="300"
        app:cpb_min_sweep_angle="10"
        app:cpb_rotation_speed="1.0"
        app:cpb_stroke_width="4dp"
        app:cpb_sweep_speed="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewPrevious"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewNext"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_story_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:riv_corner_radius="20dp"
        android:src="@drawable/ic_user"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_story_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        tools:text="saddsas"
        app:layout_constraintTop_toTopOf="@+id/iv_story_user"
        app:layout_constraintBottom_toTopOf="@+id/tv_story_date"
        app:layout_constraintStart_toEndOf="@+id/iv_story_user"/>

    <TextView
        android:id="@+id/tv_story_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteAA"
        android:textSize="11sp"
        android:layout_marginStart="10dp"
        tools:text="saddsas"
        app:layout_constraintTop_toBottomOf="@+id/tv_story_name"
        app:layout_constraintBottom_toBottomOf="@+id/iv_story_user"
        app:layout_constraintStart_toEndOf="@+id/iv_story_user"/>

</androidx.constraintlayout.widget.ConstraintLayout>