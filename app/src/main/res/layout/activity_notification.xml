<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title=""
        android:theme="@style/ToolbarTheme"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_noti_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:elevation="12dp"
            android:padding="7dp"
            android:src="@drawable/ic_back_demo"
            app:tint="@color/ic_toolbar"
            app:riv_corner_radius="20dp"
            app:riv_mutate_background="true"
            android:contentDescription="@string/image"
            android:background="?attr/selectableItemBackground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/outfit_bold"
            android:gravity="center"
            android:text="@string/notifications"
            android:textColor="@color/text_dark" />

        <ImageView
            android:id="@+id/iv_noti_clear"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:padding="10dp"
            app:tint="@color/ic_toolbar"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_clear_noti"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_follow_req"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_noti">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_follow_req"
            android:layout_marginStart="10dp"
            app:tint="@color/ic_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:text="@string/follow_request"
            android:fontFamily="@font/outfit_medium"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv1"
            app:layout_constraintBottom_toTopOf="@+id/tv2"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_popup"
            android:text="@string/accept_decline_request"
            android:textSize="11sp"
            android:fontFamily="@font/outfit_regular"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            app:layout_constraintStart_toEndOf="@+id/iv1"
            app:layout_constraintEnd_toStartOf="@+id/iv2"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toStartOf="@+id/marginSpacer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_noti_requested_2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_follow_req"
                android:layout_margin="3dp"
                app:riv_corner_radius="50dp"
                android:visibility="gone"/>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/marginSpacer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="@+id/cv_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@+id/iv2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_noti_requested_1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_follow_req"
                android:layout_margin="3dp"
                app:riv_corner_radius="50dp"
                android:visibility="gone"/>

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            android:layout_marginStart="10dp"
            app:tint="@color/ic_toolbar"
            app:riv_corner_radius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        app:layout_constraintTop_toBottomOf="@+id/cl_follow_req"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_noti"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <include
        layout="@layout/layout_no_data_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        android:id="@+id/pb_noti"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminate="true"
        app:cpb_color="#FFee44"
        app:cpb_colors="@array/pocket_bar_colors"
        app:cpb_max_sweep_angle="300"
        app:cpb_min_sweep_angle="10"
        app:cpb_rotation_speed="1.0"
        app:cpb_stroke_width="4dp"
        app:cpb_sweep_speed="1.0"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_adView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>