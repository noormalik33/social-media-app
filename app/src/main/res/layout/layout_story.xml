<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/story_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image"/>

    <jp.shts.android.storiesprogressview.StoriesProgressView
        android:id="@+id/storiesProgressView"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        android:id="@+id/pb_story"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminate="true"
        app:cpb_color="#FFee44"
        app:cpb_colors="@array/pocket_bar_colors"
        app:cpb_max_sweep_angle="300"
        app:cpb_min_sweep_angle="10"
        app:cpb_rotation_speed="1.0"
        app:cpb_stroke_width="4dp"
        app:cpb_sweep_speed="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewPrevious"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewNext"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_story_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:riv_corner_radius="20dp"
        android:src="@drawable/ic_user"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_story_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        tools:text="saddsas"
        app:layout_constraintTop_toTopOf="@+id/iv_story_user"
        app:layout_constraintBottom_toTopOf="@+id/tv_story_date"
        app:layout_constraintStart_toEndOf="@+id/iv_story_user"/>

    <ImageView
        android:id="@+id/iv_story_account_verify"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/verify_account"
        android:padding="4dp"
        android:src="@drawable/ic_verified"
        app:layout_constraintBottom_toBottomOf="@+id/tv_story_name"
        app:layout_constraintStart_toEndOf="@+id/tv_story_name"
        app:layout_constraintTop_toTopOf="@+id/tv_story_name"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_story_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteAA"
        android:textSize="11sp"
        android:layout_marginStart="10dp"
        tools:text="saddsas"
        app:layout_constraintTop_toBottomOf="@+id/tv_story_name"
        app:layout_constraintBottom_toBottomOf="@+id/iv_story_user"
        app:layout_constraintStart_toEndOf="@+id/iv_story_user"/>

    <ImageView
        android:id="@+id/iv_story_more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_more"
        app:tint="@color/white"
        android:padding="3dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storiesProgressView"
        android:contentDescription="@string/image"/>

    <LinearLayout
        android:id="@+id/ll_stories_views"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/bg_gradient_stories_views"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_eye"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/image"/>

        <TextView
            android:id="@+id/tv_story_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            tools:text="5"
            android:fontFamily="@font/outfit_bold"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>