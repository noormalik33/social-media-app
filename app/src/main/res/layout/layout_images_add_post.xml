<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_add_post"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.naver.android.helloyako.imagecrop.view.ImageCropView
            android:id="@+id/iv_create_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:gridInnerColor="#00000000"
            app:gridInnerStroke="1dp"
            app:gridOuterColor="#00000000"
            app:gridOuterStroke="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:outsideLayerColor="#00000000"
            app:setInnerGridMode="off"
            app:setOuterGridMode="off" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_remove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-10dp"
        android:padding="2dp"
        android:src="@drawable/ic_remove"
        android:elevation="20dp"
        app:layout_constraintEnd_toEndOf="@+id/cv_add_post"
        app:layout_constraintTop_toTopOf="@+id/cv_add_post" />

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="2dp"
        android:src="@drawable/ic_edit_round"
        android:elevation="20dp"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="@+id/cv_add_post"
        app:layout_constraintBottom_toBottomOf="@+id/cv_add_post" />

</androidx.constraintlayout.widget.ConstraintLayout>