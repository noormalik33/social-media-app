<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_chat_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_marginBottom="5dp"
    android:background="?attr/selectableItemBackground">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_chat_list"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        app:riv_corner_radius="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_chat_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:textSize="15sp"
        tools:text="@string/app_name"
        android:maxLines="1"
        android:textColor="@color/text_dark"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/outfit_medium"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_chat_list_msg"
        app:layout_constraintEnd_toStartOf="@+id/iv_chat_account_verify"
        app:layout_constraintStart_toEndOf="@+id/iv_chat_list"/>

    <ImageView
        android:id="@+id/iv_chat_account_verify"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/verify_account"
        android:padding="4dp"
        android:src="@drawable/ic_verified"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chat_list"
        app:layout_constraintEnd_toStartOf="@+id/btn_chat_unread_count"
        app:layout_constraintStart_toEndOf="@+id/tv_chat_list"
        app:layout_constraintTop_toTopOf="@+id/tv_chat_list"
        android:visibility="gone"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_chat_list_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="@string/app_name"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/text_bb"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/outfit_regular"
        app:layout_constraintTop_toBottomOf="@+id/tv_chat_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_chat_unread_count"
        app:layout_constraintStart_toEndOf="@+id/iv_chat_list"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_chat_unread_count"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textSize="11sp"
        android:textColor="@color/white"
        tools:text="25"
        android:padding="0dp"
        android:layout_marginEnd="5dp"
        app:backgroundTint="@color/primary"
        app:riv_corner_radius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.Material3.Button.IconButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>