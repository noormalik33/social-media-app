<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_profile"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ToolbarTheme">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_profile_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:elevation="12dp"
            android:padding="7dp"
            app:riv_corner_radius="20dp"
            app:riv_mutate_background="true"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_back_demo" />

        <TextView
            android:id="@+id/tv_prof_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="@string/name"
            android:textColor="@color/text_dark" />

        <ImageView
            android:id="@+id/iv_prof_account_verify"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@string/verify_account"
            android:padding="4dp"
            android:src="@drawable/ic_verified"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_prof_chat"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:tint="@color/ic_toolbar"
            android:src="@drawable/ic_chat"
            android:layout_gravity="end"
            android:visibility="gone"
            android:contentDescription="@string/chats"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_prof"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" >

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/htab_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/htab_collapse_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_prof"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="65dp"
                            android:layout_marginStart="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/iv_prof"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:layout_margin="3dp"
                                app:riv_corner_radius="60dp" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_prof_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_bold"
                            tools:text="John Snow"
                            android:textColor="@color/text_dark"
                            android:textSize="17sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintEnd_toStartOf="@+id/btn_prof_follow"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cv_prof"/>

                        <com.hasankucuk.socialtextview.SocialTextView
                            android:id="@+id/tv_prof_bio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=""
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/outfit_medium"
                            app:emailColor="@color/bio_email"
                            app:hashtagColor="@color/bio_hashtag"
                            app:linkType="hashtag|email|url"
                            app:normalTextColor="@color/bio_text"
                            app:urlColor="@color/bio_url"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_prof_name"
                            android:visibility="gone"/>

<!--                        <TextView-->
<!--                            android:id="@+id/tv_prof_bio"-->
<!--                            android:layout_width="0dp"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:fontFamily="@font/outfit_medium"-->
<!--                            android:textColor="@color/text_bb"-->
<!--                            android:textSize="13sp"-->
<!--                            android:layout_marginStart="20dp"-->
<!--                            android:layout_marginTop="5dp"-->
<!--                            android:layout_marginEnd="10dp"-->
<!--                            android:text=""-->
<!--                            android:maxLines="3"-->
<!--                            android:ellipsize="end"-->
<!--                            app:layout_constraintEnd_toEndOf="parent"-->
<!--                            app:layout_constraintStart_toStartOf="parent"-->
<!--                            app:layout_constraintTop_toBottomOf="@+id/tv_prof_name" />-->

                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_link"
                            android:padding="2dp"
                            android:layout_marginStart="20dp"
                            app:tint="@color/ic_toolbar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_prof_links"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_prof_links"
                            android:contentDescription="@string/link"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_prof_links"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:background="?attr/selectableItemBackground"
                            android:ellipsize="end"
                            android:fontFamily="@font/outfit_bold"
                            android:maxLines="1"
                            android:singleLine="false"
                            android:textColor="@color/text_dark"
                            android:textSize="13sp"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintEnd_toStartOf="@+id/tv_prof_links_more"
                            app:layout_constraintStart_toEndOf="@+id/iv1"
                            app:layout_constraintTop_toBottomOf="@+id/tv_prof_bio"
                            tools:text="https://google.com"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_prof_links_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:background="?attr/selectableItemBackground"
                            android:ellipsize="end"
                            android:fontFamily="@font/outfit_bold"
                            android:maxLines="2"
                            android:singleLine="false"
                            android:textColor="@color/text_dark"
                            android:textSize="13sp"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/tv_prof_links"
                            app:layout_constraintTop_toBottomOf="@+id/tv_prof_bio"
                            tools:text="3 more"
                            android:visibility="gone" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_prof_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="@string/follow"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            app:cornerRadius="6dp"
                            android:insetBottom="8dp"
                            android:fontFamily="@font/outfit_bold"
                            app:backgroundTint="@color/primary"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="10dp"
                            android:minWidth="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_prof_name"
                            app:layout_constraintTop_toTopOf="@+id/tv_prof_name"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tv_prof_total_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_bold"
                            android:text="0"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:gravity="center"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintEnd_toEndOf="@+id/tv1"
                            app:layout_constraintStart_toStartOf="@+id/tv1"
                            app:layout_constraintTop_toTopOf="@+id/cv_prof"
                            app:layout_constraintBottom_toTopOf="@+id/tv1"/>

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/posts"
                            android:textColor="@color/text_bb"
                            android:textSize="10sp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_round_grey"
                            android:fontFamily="@font/outfit_medium"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintEnd_toStartOf="@+id/view1"
                            app:layout_constraintStart_toEndOf="@+id/cv_prof"
                            app:layout_constraintTop_toBottomOf="@+id/tv_prof_total_post"
                            app:layout_constraintBottom_toBottomOf="@+id/cv_prof"/>

                        <View
                            android:id="@+id/view1"
                            android:layout_width="0.5dp"
                            android:layout_height="0dp"
                            android:background="@color/line_language"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintBottom_toBottomOf="@+id/tv1"
                            app:layout_constraintEnd_toStartOf="@+id/tv_followers"
                            app:layout_constraintStart_toEndOf="@+id/tv1"
                            app:layout_constraintTop_toTopOf="@+id/tv_prof_total_post" />

                        <TextView
                            android:id="@+id/tv_prof_total_followers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_bold"
                            android:text="0"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="@+id/tv_followers"
                            app:layout_constraintStart_toStartOf="@+id/tv_followers"
                            app:layout_constraintTop_toTopOf="@+id/tv_prof_total_post" />

                        <TextView
                            android:id="@+id/tv_followers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/followers"
                            android:textColor="@color/text_bb"
                            android:textSize="10sp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_round_grey"
                            android:fontFamily="@font/outfit_medium"
                            app:layout_constraintEnd_toStartOf="@+id/view2"
                            app:layout_constraintStart_toEndOf="@+id/view1"
                            app:layout_constraintTop_toBottomOf="@+id/tv_prof_total_followers"
                            app:layout_constraintBottom_toBottomOf="@+id/tv1"/>

                        <View
                            android:id="@+id/view2"
                            android:layout_width="0.5dp"
                            android:layout_height="0dp"
                            android:background="@color/line_language"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_followers"
                            app:layout_constraintEnd_toStartOf="@+id/tv_following"
                            app:layout_constraintStart_toEndOf="@+id/tv_followers"
                            app:layout_constraintTop_toTopOf="@+id/tv_prof_total_followers" />

                        <TextView
                            android:id="@+id/tv_prof_total_following"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_bold"
                            android:text="0"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="@+id/tv_following"
                            app:layout_constraintStart_toStartOf="@+id/tv_following"
                            app:layout_constraintTop_toTopOf="@+id/tv_prof_total_post" />

                        <TextView
                            android:id="@+id/tv_following"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/following"
                            android:textColor="@color/text_bb"
                            android:textSize="10sp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_round_grey"
                            android:fontFamily="@font/outfit_medium"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/view2"
                            app:layout_constraintTop_toBottomOf="@+id/tv_prof_total_following"
                            app:layout_constraintBottom_toBottomOf="@+id/tv1" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_user_post"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="3dp"
                    android:paddingBottom="70dp"
                    android:clipToPadding="false"/>

                <include
                    layout="@layout/layout_err_nodata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        android:id="@+id/pb_prof"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminate="true"
        app:cpb_color="#FFee44"
        app:cpb_colors="@array/pocket_bar_colors"
        app:cpb_max_sweep_angle="300"
        app:cpb_min_sweep_angle="10"
        app:cpb_rotation_speed="1.0"
        app:cpb_stroke_width="4dp"
        app:cpb_sweep_speed="1.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>