<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_upload"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_tab_upload"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toTopOf="@+id/btn_upload_media"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_upload_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_send"
        android:layout_margin="10dp"
        app:backgroundTint="@color/points"
        app:tint="@color/white"
        app:fabSize="mini"
        android:contentDescription="@string/send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view1"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_upload_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/media"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:fontFamily="@font/outfit_bold"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cornerRadius="25dp"
        app:backgroundTint="@color/points"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_upload_text"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_upload_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text"
        android:textColor="@color/text"
        android:fontFamily="@font/outfit_bold"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:cornerRadius="25dp"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_upload_media"/>

</androidx.constraintlayout.widget.ConstraintLayout>