<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="20dp"
    tools:context=".VoiceCallActivity">
    
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_user"
        app:riv_corner_radius="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_dark"
        android:textSize="25sp"
        tools:text="@string/name"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/outfit_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_user"/>

    <TextView
        android:id="@+id/tv_call_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_bb"
        android:textSize="18sp"
        tools:text="Calling.."
        android:layout_marginTop="15dp"
        android:fontFamily="@font/outfit_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name"/>

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/text_bb"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_call_status"
        android:visibility="gone"/>
    
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_call_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="100dp"
        android:src="@drawable/ic_call_start"
        app:tint="@color/white"
        app:backgroundTint="@color/gplus_color_1"
        app:fabCustomSize="60sp"
        app:useCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fab_call_end"
        android:contentDescription="@string/end" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_call_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="100dp"
        android:src="@drawable/ic_call_end"
        app:tint="@color/white"
        app:backgroundTint="@color/red"
        app:fabCustomSize="60sp"
        app:useCompatPadding="true"
        app:layout_constraintStart_toEndOf="@+id/fab_call_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/end" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_call_speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="100dp"
        android:src="@drawable/ic_speaker"
        app:tint="@color/white"
        app:backgroundTint="@color/bg_speaker_off"
        app:fabSize="mini"
        app:useCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fab_call_end"
        app:layout_constraintEnd_toStartOf="@+id/fab_call_mute"
        android:contentDescription="@string/end" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_call_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="100dp"
        android:src="@drawable/ic_mic_off"
        app:tint="@color/white"
        app:backgroundTint="@color/bg_speaker_off"
        app:fabSize="mini"
        app:useCompatPadding="true"
        app:layout_constraintStart_toEndOf="@+id/fab_call_speaker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fab_call_end"
        android:contentDescription="@string/end" />

</androidx.constraintlayout.widget.ConstraintLayout>